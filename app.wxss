/**app.wxss**/

page {
  width: 100%;
  height: 100%;
  font: normal 16px "Microsoft YaHei UI";
}

.container {
  width: 100%;
  height: 100%;
}

/*时间选择通用模版样式*/

.time_choose {
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  color: #ff963d;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}

.time_flex {
  margin-right: 20rpx;
}

.time_left {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.time_choose image {
  width: 40rpx;
  height: 40rpx;
}
