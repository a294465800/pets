/* mine_edit.wxss */

.container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background-color: #eee;
}

.part {
  background-color: #fff;
  margin-top: 40rpx;
}

.w_part {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  background-color: #fff;
}

.out_part {
  margin-top: 40rpx;
}

.message {
  color: #999;
}

/*用户面板*/

.user {
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.user .user_img {
  width: 140rpx;
  height: 140rpx;
  border: 2rpx solid #ccc;
  border-radius: 100%;
  background-size: cover;
}

.userinfo {
  width: 510rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.userinfo_more {
  width: 18rpx;
  height: 30rpx;
}

.userinfo_id {
  font-size: 30rpx;
  color: #999;
}

.sex, .birthday {
  border-top: 2rpx solid #eee;
}

/*生日*/
.birthday picker {
  width: 80%;
  text-align: right;
}

/*手机号码*/
.telChoose {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, .6);
}

.tel_part {
  width: 580rpx;
  height: 340rpx;
  box-sizing: border-box;
  padding: 40rpx 60rpx;
  position: fixed;
  margin: auto auto;
  top: 50rpx;
  left: 0;
  right: 0;
  background-color: #fff;
}
.tel_input {
  border: none;
  border-bottom: 2rpx solid #ccc;
  margin-bottom: 30rpx;
  padding-left: 20rpx;
  font: normal 32rpx "Microsoft YaHei";
  color: #333;
}

.tel_tips {
  font-size: 28rpx;
  color: #ccc;
  margin-bottom: 50rpx;
}

.tel_button {
  margin: 0 auto;
  width: 120rpx;
  height: 80rpx;
  background-color: green;
  color: #fff;
  text-align: center;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}