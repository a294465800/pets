/* news.wxss */

/*滚动图片*/

swiper {
  height: 400rpx;
}

swiper image {
  width: 100%;
}

.news {
  width: 100%;
  height: 100%;
}

/*导航样式*/

.nav_bar {
  display: flex;
  box-sizing: border-box;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  background-color: #fff;
}

.nav_title {
  width: 80rpx;
  box-sizing: border-box;
  font: normal 28rpx/74rpx "Microsoft YaHei UI";
  text-align: center;
  border-bottom: 4rpx solid transparent;
}

.nav_select {
  color: #f75000;
  border-bottom: 4rpx solid #f75000;
}

/*导航置顶*/

.fix_nav {
  position: fixed;
  top: 0;
  left: 0;
}
.news_list_hover {
  margin-top: 478rpx;
}
/*文章样式*/

.news_list_article {
  display: flex;
  box-sizing: border-box;
  height: 218rpx;
  width: 100%;
  padding: 0 20rpx;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-top: 2rpx solid #eee;
}

.news_article_message {
  width: 440rpx;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.news_article_title {
  font: normal 32rpx "Microsoft YaHei";
  min-height: 68rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.news_article_img {
  width: 220rpx;
  height: 180rpx;
  background-color: transparent;
}

.news_article_img image {
  width: 100%;
  height: 100%;
}

.news_article_tags {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  margin-top: 10rpx;
}

.tags_item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  color: #bcbcbc;
  font: normal 24rpx "Microsoft YaHei";
  margin-right: 20rpx;
}

.tag_img {
  width: 20rpx;
  height: 20rpx;
  margin-right: 6rpx;
}

.news_article_info {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.info_item {
  flex-grow: 1;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  color: #bcbcbc;
  font: normal 26rpx "Microsoft YaHei";
  margin-top: 10rpx;
}

.news_article_info image {
  width: 26rpx;
  height: 30rpx;
  margin: 0 10rpx 0 0;
  align-self: center;
}

.x-scroll {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}