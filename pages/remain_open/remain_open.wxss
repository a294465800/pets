/* remain_open.wxss */

/*统一样式*/

.container, .remain_content, .remain_close, .remain_finish {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container {
  justify-content: space-between;
  padding: 30rpx 10rpx 16rpx;
}

/*提醒内容*/

.remain_content {
  justify-content: flex-start;
  width: 100%;
}

.content_head {
  text-align: center;
}

.content_img {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}

.content_head_name {
  margin-top: 10rpx;
  font-weight: bold;
}

.remain_type {
  color: #ff963d;
  margin-top: 20rpx;
}

.remain_time {
  box-sizing: border-box;
  margin: 30rpx 0;
  padding: 14rpx 0;
  background-color: #f9f9f9;
  border-radius: 20rpx;
  text-align: center;
  width: 80%;
}

.remain_time_title {
  color: #999;
  margin-bottom: 20rpx;
}

.remain_time_title image {
  width: 30rpx;
  height: 30rpx;
}

.remain_time_content {
  font-size: 40rpx;
  font-weight: bold;
}

.remain_close {
  justify-content: center;
  background-color: #f9f9f9;
  width: 200rpx;
  height: 80rpx;
  color: #ff963d;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}

.remain_close_tip {
  font-size: 26rpx;
  color: #b3b3b3;
}

/*完成按钮*/

.remain_finish {
  width: 100%;
  height: 92rpx;
  justify-content: center;
  color: #fff;
  background-color: #ff963d;
  border-radius: 10rpx;
}
