/* remain_index.wxss */

.container {
  background-color: #eee;
  height: auto;
  padding-bottom: 16rpx;
}

/*首页图片*/

.index_img {
  width: 100%;
  height: 400rpx;
  margin-bottom: 20rpx;
}

/*首页内容部分*/

.index_part {
  box-sizing: border-box;
  width: 100%;
  background-color: #fff;
  margin-bottom: 30rpx;
  padding: 20rpx 30rpx 20rpx;
}

.index_title {
  font-weight: bold;
}

.index_title, .index_title_s {
  font-size: 36rpx;
  margin-bottom: 20rpx;
  color: #000;
}

.index_title_content {
  color: #333;
}

.index_button {
  background-color: #ff963d;
  color: #fff;
  width: 97.3%;
  height: 92rpx;
  font-size: 36rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  margin: 0 auto;
}
