/* vaccine.wxss */

.container {
  background-color: #eee;
  color: #000;
  height: 100%;
}

.part {
  padding: 0 30rpx;
  background-color: #fff;
}

/*上次免疫*/

.vaccine_last {
  margin-bottom: 30rpx;
}

.vaccine_last_item {
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2rpx;
  height: 92rpx;
  width: 100%;
}

.vaccine_last_picker {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.vaccine_picker {
  min-width: 170rpx;
}

.vaccine_img {
  width: 16rpx;
  height: 30rpx;
}

/*免疫针数*/
.vaccine_number {
  margin-bottom: 30rpx;
}

.vaccine_number_title {
  font-size: 28rpx;
  color: #4f4f4f;
}

.vaccine_number_item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.vaccine_icon {
  width: 50rpx;
  height: 50rpx;
  border: 2rpx solid #ccc;
  border-radius: 50%;
  margin-right: 20rpx;
}

.vaccine_number_content {
  flex: 1;
  border-bottom: 2rpx solid #eee;
}

.vaccine_number_item:nth-last-child(1) .vaccine_number_content {
  border: none;
}

.vaccine_number_content_title {
  margin: 10rpx 0;
}

.vaccine_number_content_intro {
  color: #999;
  font-size: 26rpx;
  padding-bottom: 10rpx;
}

/*提醒计划*/
.vaccine_plan {
  margin-bottom: 30rpx;
}

.vaccine_plan_time {
  color: #999;
}

/*建议时间*/
.vaccine_suggest {
  font-size: 28rpx;
  text-align: center;
  color: #999;
}