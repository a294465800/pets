/**index.wxss**/

/*初次打开时样式*/

.container {
  border-top: 2px solid #d0d0d0;
}

.img {
  height: 90%;
}

.start {
  width: 100%;
  height: 10%;
  box-sizing: border-box;
  border-top: 1px solid #9d9d9d;
  font: normal 20px/53px "Microsoft YaHei UI";
  text-align: center;
  color: #00bcd4;
}

/*导航样式*/

.nav_top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 20rpx 40rpx;
  margin-top: 30rpx;
}

.nav_top_left, .nav_top_right {
  display: flex;
  align-self: center;
}

.head_img image {
  width: 80rpx;
  height: 80rpx;
  border: 2px solid #9d9d9d;
  border-radius: 100%;
}

.head_word {
  padding-top: 10rpx;
  text-indent: 29rpx;
  position: relative;
}

.pet_name, .pet_age {
  font: 700 14px "Microsoft YaHei UI";
  color: #5b5b5b;
}

.pet_name {
  max-width: 220rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.head_word .pet_age {
  font: normal 12px "Microsoft YaHei UI";
  color: #333;
}

.head_refresh {
  width: 30rpx;
  height: 30rpx;
  background-color: #666;
  border-radius: 100%;
  position: absolute;
  right: -30rpx;
  top: 10rpx;
}

.status {
  font: 700 14px "Microsoft YaHei UI";
  color: #5b5b5b;
}

.status_progess {
  width: 200rpx;
  height: 30rpx;
  box-sizing: border-box;
  border: 2px solid dodgerblue;
  align-self: center;
}

.persent {
  width: 20%;
  height: 100%;
  background-color: dodgerblue;
  font: normal 10px/24rpx "Microsoft YaHei UI";
  color: #fff;
  text-align: center;
}
.nav_bottom {
  display: flex;
  justify-content: space-around;
  width: 100%;
}
.nav_bottom view {
  font: normal 14px/64rpx "Microsoft YaHei UI";
  flex-grow: 1;
  text-align: center;
  border-bottom: 3px solid transparent;
}

.nav_bottom .nav_select {
  font-weight: 700;
  border-color: red;
}

/*今日安排样式*/
.scroll-plan {
  width: 100%;
  height: 100%;
  background-color: #ccc;
  display: flex;
  flex-direction: column;
  padding: 30rpx 0;
  align-items: center;
}
.scroll-flex {
  width: 700rpx;
  align-self: center;
  background-color: #fff;
}